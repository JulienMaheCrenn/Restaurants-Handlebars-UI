<div class='menu'>
  <h3>{{this.title}}</h3>
  <div class='promo-blocks__actions'>
    <a href='/menus/{{this.id}}' class='anchor--button'>
      View
    </a>
    <a
      href='/menus/{{this.id}}/edit'
      data-id='{{this.id}}'
      class='anchor--button'
    >
      Edit
    </a>
    <button type="button" data-id='{{this.id}}' onClick='deleteMenu(this);'>
      Delete
    </button>
  </div>
</div>