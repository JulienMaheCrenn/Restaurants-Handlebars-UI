
<style>
    nav {
        background-color: rgb(179, 112, 241);
        padding: 15px;
        color: cornsilk;
        font: bold;
    }
    nav>a {
      padding: 15px;
    }
</style>
<nav>
  <a href="/restaurants/">Return To All Restaurants</a>
  <a href="/restaurants/new">Create New Restaurant</a>
</nav>
<aside>
  <h2>Menus</h2>
  {{#if menus.length }}
    {{#each menu }}
      {{> menuInstance this }}
    {{/each}}
  {{else}}
    <p>No Menus left :(</p>
  {{/if}}
</aside>
<div class='restaurant'>
  <h3>{{restaurant.name}}</h3>
  <img src='{{restaurant.imagelink}}' alt='{{restaurant.name}}' />
  <div class='promo-blocks__actions'>
    <a
      href='/restaurants/{{restaurant.id}}/edit'
      data-id='{{restaurant.id}}'
      class='anchor--button'
    >
      Edit
    </a>
    <button type="button" data-id='{{restaurant.id}}' onClick='deleteRestaurant(this)'>
      Delete
    </button>
  </div>
</div>